@model AdminService.Models.Team
@{
    ViewData["Title"]="Team Confirguration Edit Interface";
}

<h1>@ViewData["Title"]</h1>

@switch ((string)ViewData["ErrCode"])
{
    case "-1": <h2 class="color-red">Error: Upstream Storage Server was Unreachable</h2> break;
    case "404" : <h2 class="color-red">Error: The requested team was not found</h2> break;
    default : 
<div class="color-red"><h2>@ViewData["UpstreamResponse"]</h2></div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="EditConfig" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Name" />
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input class="form-control" asp-for="Id" style="background-color: #eee;" readonly />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Code" class="control-label"></label>
                <input class="form-control" asp-for="Code" style="background-color: #eee;" readonly />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Config.RouterIpAddress" class="control-label"></label>
                <input asp-for="Config.RouterIpAddress" class="form-control" />
                <span asp-validation-for="Config.RouterIpAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Config.RouterPort" class="control-label"></label>
                <input asp-for="Config.RouterPort" class="form-control" />
                <span asp-validation-for="Config.RouterPort" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Config.ConnectionType" class="control-label"></label>
                <input asp-for="Config.ConnectionType" class="form-control" />
                <span asp-validation-for="Config.ConnectionType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Code">Back to edit team info</a>
</div> 
<div>
    <a asp-action="Detail" asp-route-id="@Model.Code">Back to detail page</a>
</div>
break;
}
<div>
    <a asp-action="Index">Back to Index</a>
</div>